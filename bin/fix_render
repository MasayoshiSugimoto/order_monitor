#!/bin/bash


function usage {
	cat << EOF
FIX_RENDER
==========

Read fix messages from stdin and render in human readable format.


Usage
-----

Render fix messages:
$ fix_render -m

Render orders:
$ fix_render -o



Options
-------

-h	Print this help message.
-m	Render fix messages in tabular format.
-o	Render orders in tabular format.
EOF
}


function render_messages {
	python3 -c '
from src.message_util import asHumanTable
asHumanTable()
		' \
		| column -t -s'	' 
}


function render_orders {
	(
		echo 'OrderID	OrdStatus	Symbol	Side	CumQty	AvgPx	OrderQty	OrdType	Price'
		sed -E 's/		/	NULL	/g' | sed -E 's/^	/NULL	/g'
	) | column -t -s'	'
}


while getopts "hmo" arg; do
  case $arg in
    m)
      render_messages
      exit 0
      ;;
    o)
      render_orders
      exit 0
      ;;
		h)
			usage
			exit 0
			;;
		*)
			echo "ERROR: Wrong argument"
			usage
			exit 1
	esac
done
usage
